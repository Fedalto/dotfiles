[user]
  name  = Leonardo Fedalto
  email = lfedalto@gmail.com
[color]
  diff   = auto
  status = auto
  branch = auto
  ui     = true
[gui]
  spellingdictionary = none
[alias]
  l       = log --pretty=format:'%C(yellow)%h %C(magenta)%cr %Creset|%C(red)%d%Creset %s %C(cyan)[%an]' --graph --date=short
  r       = !git l -20
  la      = !git l --all
  ra      = !git r --all
  ar      = !git r --all
  s       = status
  sh      = show
  d       = diff
  dc      = diff --cached
  fall    = fetch --all -p
  co      = checkout
  ci      = commit
  undo    = reset --hard
  news    = !git l ORIG_HEAD..
  daily   = !git l --no-merges --author=Fedalto --since yesterday
  ff      = !git merge --ff-only $(git for-each-ref --format='%(upstream:short)' $(git symbolic-ref -q HEAD))
  bclean  = !git branch --merged | grep -vE '(master|develop)' | xargs -rp git branch -d
[push]
  default = upstream
[core]
  excludesfile = /home/fedalto/.gitignore_global
  editor = vim
[diff "po"]
  textconv=strip_po_comments.sh
